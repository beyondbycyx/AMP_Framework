<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/NavigationActivityTheme</item>
    </style>

    <style name="NavigationActivityTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/push_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/push_close_exit</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="colorPrimary">@color/blue_primary</item>

        <item name="colorPrimaryDark">@color/blue_primary</item>

        <item name="colorAccent">@color/blue_primary</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>